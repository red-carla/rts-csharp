<Window x:Class="RecruitmentApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Email:" Margin="5"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="5" Width="200"/>
            <TextBlock Text="Password:" Margin="5"/>
            <PasswordBox x:Name="PasswordBox" Margin="5" Width="200" PasswordChanged="PasswordBox_PasswordChanged"/>
            <Button Content="Login" Command="{Binding LoginCommand}" Margin="5" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
