<UserControl
    x:Class="RTS.Views.CandidateListingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock FontSize="28" Text="People" />
            <Button
                Margin="10 0 0 0"
                Padding="10 5"
                VerticalAlignment="Center"
                Command="{Binding AddCandidateCommand}"
                Content="Add Candidate" />
        </StackPanel>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Candidates}"  >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Title}" Header="Title"  IsReadOnly="True" Width="100" />
                <DataGridTextColumn Binding="{Binding Name}" Header="Name"  IsReadOnly="True" Width="50"/>
                <DataGridTextColumn Binding="{Binding Avatar}" Header="Avatar"  IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Phone}" Header="Phone"  IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Address}" Header="Address" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Email}" Header="Email" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding ResumeLink}" Header="Resume" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Status}" Header="Status" IsReadOnly="True" /> 
            </DataGrid.Columns>
        </DataGrid>
       
    </Grid>
</UserControl>