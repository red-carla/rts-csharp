<Window x:Class="RTS.Views.CandidateDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RTS.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Application Details" FontSize="20" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Candidate.Id}" FontSize="16"/>
            <TextBlock Text="{Binding Candidate.Name}" FontSize="14"/>

        </StackPanel>

    </Grid>
</Window>
