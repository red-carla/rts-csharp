<Window x:Class="RTS.Views.ApplicationDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RTS.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid >
        
        <StackPanel>
            <TextBlock Text="Application Details" />
            <TextBlock Text="{Binding JobApplication.Id}" FontSize="16"/>
            <TextBlock Text="{Binding JobApplication.CreatedAt}" FontSize="14"/>
            <TextBlock Text="{Binding JobApplication.UpdatedAt}" FontSize="14"/>
            <TextBlock Text="{Binding VacancyTitle}" FontSize="14"/>
            <TextBlock Text="{Binding CandidateName}" FontSize="14"/>
            <TextBlock Text="{Binding ApplicationStageName}" FontSize="14"/>
            <TextBlock Text="{Binding RecruiterName}" FontSize="14"/>
            
            
            

        </StackPanel>
    </Grid>
</Window>
